<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".CategoryActivity">

    <Button android:id="@+id/all_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:minHeight="30dp"
        android:minWidth="60dp"
        android:background="@drawable/button_create"
        android:fontFamily="@font/nanumsquare_b"
        android:textSize="13.8sp"
        android:textColor="#FFFFFF"
        android:text="@string/category_all"
        android:onClick="onClick"/>

    <TextView android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18.5dp"
        android:fontFamily="@font/nanumsquare_eb"
        android:text="@string/category"
        android:textSize="17.5sp"
        android:textColor="#81179E"
        android:letterSpacing="0.06" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_below="@id/title_txt"
        android:clipToPadding="false" />

</RelativeLayout>