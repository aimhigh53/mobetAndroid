<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:layout_marginTop="137dp"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progress_rank"
        android:id="@+id/progress_grade"
        android:progressDrawable="@drawable/circular_progressbar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@+id/progressbar_win_txt"
         />
    <TextView
        android:id="@+id/grade_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#70b8ad"
        app:layout_constraintStart_toStartOf="@+id/progress_grade"
        app:layout_constraintTop_toTopOf="@+id/progress_grade"
        app:layout_constraintEnd_toEndOf="@+id/progress_grade"
        app:layout_constraintBottom_toBottomOf="@+id/progress_grade"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/personal_grade"
    android:textSize="12sp"
    android:textColor="#b1b1b1"
    app:layout_constraintStart_toStartOf="@+id/progress_grade"
    app:layout_constraintEnd_toEndOf="@+id/progress_grade"
    app:layout_constraintBottom_toTopOf="@+id/grade_txt"/>
    <TextView
        android:id="@+id/grade_next_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/progress_grade"
        app:layout_constraintEnd_toEndOf="@+id/progress_grade"
        app:layout_constraintTop_toBottomOf="@+id/grade_txt"
        android:textSize="12sp"
        android:textColor="#b1b1b1"
        />
    <ProgressBar
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toTopOf="@+id/progress_grade"
        android:id="@+id/progress_rank"
        app:layout_constraintRight_toRightOf="parent"
        android:progressDrawable="@drawable/circular_progressbar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/progress_grade"
        app:layout_constraintLeft_toRightOf="@+id/progress_grade"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/rank_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#ffa300"
        app:layout_constraintTop_toTopOf="@+id/progress_rank"
        app:layout_constraintStart_toStartOf="@+id/progress_rank"
        app:layout_constraintEnd_toEndOf="@+id/progress_rank"
        app:layout_constraintBottom_toBottomOf="@+id/progress_rank"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_rank"
        android:textSize="12sp"
        android:textColor="#b1b1b1"
        android:layout_marginBottom="1.3dp"
        app:layout_constraintStart_toStartOf="@+id/progress_rank"
        app:layout_constraintEnd_toEndOf="@+id/progress_rank"
        app:layout_constraintBottom_toTopOf="@+id/rank_txt"/>
    <TextView
        android:id="@+id/top_rank_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#b1b1b1"
        android:layout_marginBottom="1.3dp"
        app:layout_constraintStart_toStartOf="@+id/progress_rank"
        app:layout_constraintEnd_toEndOf="@+id/progress_rank"
        app:layout_constraintTop_toBottomOf="@+id/rank_txt"/>
    <TextView
    android:id="@+id/progressbar_win_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/personal_win"
    android:layout_marginTop="79dp"
    app:layout_constraintStart_toStartOf="@+id/progressbar_win"
    app:layout_constraintEnd_toEndOf="@+id/progressbar_win"
    app:layout_constraintTop_toBottomOf="@+id/progress_grade"

    />
    <TextView
        android:id="@+id/progressbar_first_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_first"
        android:layout_marginStart="66.5dp"
        android:layout_marginEnd="66.5dp"
        android:layout_marginTop="79dp"
        app:layout_constraintStart_toStartOf="@+id/progressbar_first"
        app:layout_constraintEnd_toEndOf="@+id/progressbar_first"
        app:layout_constraintTop_toBottomOf="@+id/progress_grade"

        />
    <TextView
        android:id="@+id/progressbar_play_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_play"
        android:layout_marginTop="79dp"
        app:layout_constraintStart_toStartOf="@+id/progressbar_play"
        app:layout_constraintEnd_toEndOf="@+id/progressbar_play"
        app:layout_constraintTop_toBottomOf="@+id/progress_grade"
        />
    <ProgressBar
        android:layout_marginStart="20.8dp"
        android:layout_marginTop="16.3dp"
        android:id="@+id/progressbar_win"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressBackgroundTint="#ffffff"
        android:progressTint="#e0e0e0 "
        app:layout_constraintTop_toBottomOf="@+id/progressbar_win_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progressbar_first"
        />
    <ProgressBar
        android:layout_marginStart="22.8dp"
        android:layout_marginTop="15.3dp"
        android:id="@+id/progressbar_first"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressBackgroundTint="#ffffff"
        android:progressTint="#e0e0e0 "
        app:layout_constraintRight_toLeftOf="@+id/progressbar_play"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@id/progressbar_win"
        app:layout_constraintTop_toBottomOf="@+id/progressbar_first_txt"
        />
    <ProgressBar
        android:layout_marginStart="22.8dp"
        android:layout_marginTop="15.3dp"
        android:id="@+id/progressbar_play"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressBackgroundTint="#ffffff"
        android:progressTint="#e0e0e0 "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/progressbar_first"
        app:layout_constraintTop_toBottomOf="@+id/progressbar_play_txt"
        />


</androidx.constraintlayout.widget.ConstraintLayout>